rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read/write their own user document
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read all questions
    // Only allow create by authenticated users
    // Only allow updates to vote counts (not text/options)
    match /questions/{questionId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      // Only allow updating vote counts, not question content
      allow update: if request.auth != null && 
                      request.resource.data.text == resource.data.text &&
                      request.resource.data.option_a == resource.data.option_a &&
                      request.resource.data.option_b == resource.data.option_b &&
                      request.resource.data.creator_uid == resource.data.creator_uid &&
                      request.resource.data.created_at == resource.data.created_at;
    }
    
    // Allow authenticated users to read votes and create their own
    // Votes cannot be updated or deleted
    match /votes/{voteId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && 
                      request.resource.data.uid == request.auth.uid;
      allow update, delete: if false;
    }
  }
}
